{% extends 'frontOffice/layout.twig' %}

{% block head %}
    <title>Enregistrement</title>
    <link rel="stylesheet" href="../public/css/register.css">
{% endblock %}

{% block content %}
    <div class="container-fluid" id="registerForm">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="card card-signin">
                        {% if session.successSendmailRegisterUser %}
                        <div class="card-body">
                            <p>{{ session.successSendmailRegisterUser }}</p>
                        </div>
                        {% else %}
                        <div class="card-body">
                            <h5 class="card-title text-center">S'inscrire</h5>
                            {% if session.errorsRegisterUser %}
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                {% for error in session.errorsRegisterUser %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                                </ul>
                            </div>
                            {% endif %}
                            <form class="form-signin" action="../public/index.php?route=registerUser" method="post">
                                <div class="form-label-group">
                                    <input type="text" id="inputUserame" name="inputRegisterUserName" class="form-control" required autofocus value={{ session.inputsRegisterUser.inputRegisterUserName }}>
                                    <label for="inputUserame">Nom</label>
                                </div>
                                <div class="form-label-group">
                                    <input type="email" id="inputEmail" name="inputRegisterUserMail" class="form-control" required value={{ session.inputsRegisterUser.inputRegisterUserMail }}>
                                    <label for="inputEmail">Email</label>
                                </div>
                                <hr>
                                <div class="form-label-group">
                                    <input type="password" id="inputPassword" name="inputRegisterUserPassword" class="form-control" required value={{ session.inputsRegisterUser.inputRegisterUserPassword }}>
                                    <label for="inputPassword">Mot de passe</label>
                                </div>
                                <div class="form-label-group">
                                    <input type="password" id="inputConfirmPassword" name="inputRegisterUserPasswordConfirm" class="form-control" required value={{ session.inputsRegisterUser.inputRegisterUserPasswordConfirm }}>
                                    <label for="inputConfirmPassword">Confirmation mot de passe</label>
                                </div>
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">S'enregistrer</button>
                                <a class="d-block text-center mt-2 small" href="../public/index.php?route=signIn">S'authentifier</a>
                            </form>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}