{% extends 'layout.twig' %}

{% block head %}
    <title>Blog post avec commentaires</title>
    <link rel="stylesheet" href="../public/css/blogPostWithComments.css">
{% endblock %}

{% block content %}

    <div class="container-fluid" id="blogPostWihComments">
        <div class="container" >
            <div class="card">
                <div class="card-header">
                    <h4>{{ blogPost.title }}</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ blogPost.chapo }}</h5>
                    <p class="card-text">{{ blogPost.content }}</p>
                    <hr>
                    <h5>Commentaires</h5>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        {% for comment in comments %}
                            <div class="col-12">
                                <div class="card w-50">
                                    <div class="card-body">
                                        <h5 class="card-title">Posté par {{ comment.name }}</h5>
                                        <h6>dernière modification le {{ comment.updatedAt }}</h6>
                                        <p class="card-text">{{ comment.content }}</p>
                                    </div>
                                    {% if userConnectSuccess and userConnectSuccess.idUser == comment.userId%}
                                        <div id="collapseModifComment">
                                            <hr>
                                            <p>
                                                <a data-toggle="collapse" href="#" data-target="#multiCollapseExample1" aria-expanded="false" aria-controls="multiCollapseExample1">Modifier commentaire</a>
                                                <a data-toggle="collapse" href="#" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Supprimer commentaire</a>
                                            </p>
                                            <div class="collapse multi-collapse" id="multiCollapseExample1">
                                                <form action="" method="post">
                                                    <textarea name="textareaModifComment" rows="5" class="form-control">{{ comment.content }}</textarea>
                                                    <button type="submit" class="btn btn-success">Modifier</button>
                                                </form>
                                            </div>
                                            <div class="collapse multi-collapse" id="multiCollapseExample2">
                                                <div class="alert alert-danger" role="alert">
                                                    <form>
                                                        <p>Voulez-vous vraiement supprimer ce commentaire ?</p>
                                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {% if userConnectSuccess %}
                <div class="container-fluid">
                    <div class="card w-75">
                        <div class="card-header">
                            ... Voulez-vous ajouter un commentaire?
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="comment">Rédigez votre commentaire:</label>
                                    <textarea class="form-control" id="comment" rows="5" placeholder="500 caractères maximum"></textarea>
                                </div>
                                <button type="submit" class="btn btn-success">Valider</button>
                            </form>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}